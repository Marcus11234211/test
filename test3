services:
  pihole:
    container_name: pihole
    image: pihole/pihole:latest
    network_mode: host
    environment:
      TZ: 'Europe/London'
      FTLCONF_webserver_api_password: 'your_password'
      # v6 FIX: Only use IPv4 ports (8080 and 443s for secure)
      # Removing "[::]" prevents the webserver from crashing on IPv6 errors.
      FTLCONF_webserver_port: '8080,443s' 
      FTLCONF_dns_listeningMode: 'ALL'
      DNSMASQ_USER: 'root'
      FTLCONF_LOCAL_IPV4: '10.0.201.202'
    volumes:
      - './etc-pihole:/etc/pihole'
      - './etc-dnsmasq.d:/etc/dnsmasq.d'
    cap_add:
      - NET_ADMIN
      - NET_RAW
    restart: unless-stopped
